<% if @employee.errors.blank? %>
  $("tbody").prepend('<%= j render('list', employee: @employee) %>');
  $("#employee_modal").modal('hide');
<% else %>
  $(".red.pointing").remove();
  $(".field").removeClass('error');
  <% @employee.errors.messages.each do |key, value| %>
  //parent()方法：返回被选中元素的父元素
  $("#employee_<%= key %>").parent().addClass('error');
  $("#employee_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>