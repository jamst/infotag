<% if @classification.errors.blank? %>
  $("#classification_<%= @classification.id %>").replaceWith("<%= j(render partial: 'list', locals: { classification: @classification} ) %>");
  $("#classification_modal").modal('hide');
<% else %>
  $(".red.pointing").remove();
  $(".field").removeClass('error');
  <% @classification.errors.messages.each do |key, value| %>
    //parent()方法：返回被选中元素的父元素
    $("#classification_<%= key %>").parent().addClass('error');
    $("#classification_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>