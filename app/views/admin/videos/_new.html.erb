<%= simple_form_for @video, url: admin_videos_path, method: :post, remote: true do |f| %>
  <div id="form_message" class="two fields red" style="margin-left: 15px;display:none;"></div>

  <div class="two fields">
    <%= f.input :title, label: "标题" %>
    <div class="field">
      <label>发布日期</label>
      <div class="ui calendar J_calendar_datetime" id='calendar1'>
        <div class="ui input left icon">
          <i class="calendar icon"></i>
          <%= f.input_field :release_at, as: :string %>
        </div>
      </div>
    </div>
  </div>

  <div class="two fields">
    <%= f.input :url, label: "目标url" %>
    <%= f.input :image_url, label: "图片url" %>
  </div>

  <div class="two fields">
    <%= f.input :weight, label: '权重', as: :select, collection: select_options_from_enum(Video, :weight), include_blank: "选择权重", input_html: {class: 'ui dropdown fluid'} %>
    <%= f.input :status, label: '状态', as: :select, collection: select_options_from_enum(Video, :status), include_blank: "选择状态", input_html: {class: 'ui dropdown fluid'} %>
  </div>

  <div class="two fields">
    <%= f.input :category_id, label: "所属栏目", as: :select, collection: Category.pluck(:name,:id), include_blank: "选择所属栏目", input_html: {class: 'ui dropdown fluid'}, label: "所属栏目" %>
    <%= f.input :spider_target_id, label: "信息来源", as: :select, collection: SpiderTarget.pluck(:name,:id), include_blank: "选择信息来源", input_html: {class: 'ui dropdown fluid'}, label: "信息来源" %>
  </div>

  <div class="two fields">
    <%= f.input :overlay_time, label: "时长" %>
    <%= f.input :play_count, label: "播放量" %>
  </div>

  <div class="two fields">
    <%= f.input :tags_str, label: "标签" %>
    <%= f.input :author, label: "发布者名称" %>
  </div>

  <div class="field">
    <%= f.input :approve_status, label: '审核状态', as: :select, collection: select_options_from_enum(Video, :approve_status), include_blank: "选择状态", input_html: {class: 'ui dropdown fluid'} %>
  </div>

  <div class="field">
    <div class="actions ">
      <div class="ui button primary" id="commition">提交</div>
      <div class="ui cancel button">取消</div>
    </div>
  </div>

<% end %>

