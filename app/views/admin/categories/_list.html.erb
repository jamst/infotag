<tr id="category_<%= category.id %>">
  <td class="center aligned">
    <span><%= category.id%></span>
  </td>
  <td class="center aligned">
    <%= category.name %>
  </td>
  <td class="center aligned">
    <%= category.sort_live %>
  </td>
  <td class="center aligned">
    <%= day_time(category.created_at) %>
  </td>
  </td>
  <td class="center aligned">
    <%= link_to edit_admin_category_path(category.id), remote: true, class: "ui icon blue basic button" do %>
      <i class="edit icon"></i>编辑
    <% end %>

    <% if category.status == "enabled" %>
      <%= link_to update_status_admin_categories_path(id:category.id,status:"disabled"), remote: true, class: "ui icon orange basic button" do %>
        <i class="plus icon orange"></i>禁用
      <% end %>
    <% else %>
      <%= link_to update_status_admin_categories_path(id:category.id,status:"enabled"), remote: true, class: "ui icon blue basic button" do %>
        <i class="plus icon green"></i>启用
      <% end %>
    <% end %>

    <%= link_to admin_category_path(category.id), method: :delete, remote: true, class: "ui icon red basic button", data: {confirm: "确定删除吗?"} do %>
      <i class="close icon"></i>删除
    <% end %>
  </td>
</tr>
