<% if @video.errors.blank? %>
  $("#video_<%= @video.id %>").replaceWith("<%= j(render partial: 'list', locals: { video: @video} ) %>");
  $("#video_modal").modal('hide');
<% else %>
  $(".red.pointing").remove();
  $(".field").removeClass('error');
  <% @video.errors.messages.each do |key, value| %>
    //parent()方法：返回被选中元素的父元素
    $("#video_<%= key %>").parent().addClass('error');
    $("#video_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>


