<% if @info.errors.blank? %>
  $("#info_<%= @info.id %>").replaceWith("<%= j(render partial: 'approve_list', locals: { info: @info} ) %>");
  $("#info_modal").modal('hide');
<% else %>
  $(".red.pointing").remove();
  $(".field").removeClass('error');
  <% @info.errors.messages.each do |key, value| %>
    //parent()方法：返回被选中元素的父元素
    $("#info_<%= key %>").parent().addClass('error');
    $("#info_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>