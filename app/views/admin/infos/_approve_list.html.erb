<tr id="info_<%= info.id %>">
  <td class="center aligned">
    <span><%= info.id%></span>
  </td>
  <td class="center aligned">
    <%= link_to str_chip(info.title,20), info.url , target: '_blank' %>
  </td>
  <td class="center aligned">
    <a href="<%= info.local_image_url %>" target='_blank' ><%= image_tag info.local_image_url, width: '100px', height: '50px' %></a>
  </td>
  <td class="center aligned">
    <%= info.category&.name %>
  </td>
  <td class="center aligned">
    <%= day_time(info.release_at) %>
  </td>
  <td class="center aligned">
    <%= info.spider_target&.name %>
  </td>
  <td class="center aligned">
    <%= info.i18n_attr_weight %>
  </td>
  <td class="center aligned">
    <%= info.tags_str %>
  </td>
  <td class="center aligned">
    <%= link_to edit_admin_info_path(info.id), remote: true, class: "ui icon blue basic button" do %>
      <i class="edit icon"></i>编辑
    <% end %>

    <% if info.status == "enabled" %>
      <%= link_to update_status_admin_infos_path(id:info.id,status:"disabled"), remote: true, class: "ui icon orange basic button" do %>
        <i class="plus icon orange"></i>禁用
      <% end %>
    <% else %>
      <%= link_to update_status_admin_infos_path(id:info.id,status:"enabled"), remote: true, class: "ui icon blue basic button" do %>
        <i class="plus icon green"></i>启用
      <% end %>
    <% end %>


    <%= link_to admin_info_path(info.id), method: :delete, remote: true, class: "ui icon red basic button", data: {confirm: "确定删除吗?"} do %>
      <i class="close icon"></i>删除
    <% end %>
  </td>
</tr>
