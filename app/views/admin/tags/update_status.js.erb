<% if @tag.errors.blank? %>
  $("#tag_<%= @tag.id %>").replaceWith("<%= j(render partial: 'list', locals: { tag: @tag} ) %>");
  $("#tag_modal").modal('hide');
<% else %>
  $(".red.pointing").remove();
  $(".field").removeClass('error');
  <% @tag.errors.messages.each do |key, value| %>
    //parent()方法：返回被选中元素的父元素
    $("#tag_<%= key %>").parent().addClass('error');
    $("#tag_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>